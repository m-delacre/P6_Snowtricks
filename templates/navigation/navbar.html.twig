    <div class="computer">
        <img id="paper_deco" src="{{ asset('../assets/images/deco/papier.png') }}" alt="snow_decoration">
        <div class="nav-left">
            <a href={{ path('app_home')}}><img src="{{ asset('assets/images/Snowtricks_Logo.png') }}" alt="logo"></a>
        </div>
        <div class="nav-right">

            <div class="nav-right-link">
                <a href="{{ path('app_home')}}">Accueil</a>
            </div>

            <div class="nav-right-link">
                <a href="{{ path('app_figures')}}">Tricks</a>
            </div>

            <div class="nav-right-link">
                <a href="{{ path('app_figure_create')}}">Ajouter un trick</a>
            </div>

            {% if app.user %}
            <div class="nav-right-link">
