{% extends 'base.html.twig' %}

{% block title %}Changer votre mot de passe{% endblock %}

{% block body %}
<main class="passwordChange-page">
    <h1>Changer de mot de passe :</h1>

    {{ form_start(resetForm, {'attr': {'class': 'passwordChange-page-form'}}) }}
        {{ form_row(resetForm.plainPassword, {'attr': {'class': 'passwordChange-page-form-row'}}) }}
        <button class="register-form-btn">Changer le mot de passe</button>
    {{ form_end(resetForm) }}
</main>
{% endblock %}
